		/* Set up some default widget settings. */
		$defaults = array( 'title' => __('Video','theme'),
 			);
		$instance = wp_parse_args( (array) $instance, $defaults );

	$id = isset($instance['id']) ? $instance['id'] : '';
	$type = isset($instance['type']) ? $instance['type'] : '';

		?>

